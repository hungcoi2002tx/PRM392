<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".InCome_Add"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:background="@color/greenDam"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title1_income"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Income"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <TextView
        android:id="@+id/title2_income"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="How much?"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="left"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/tv_income_money"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:hint="$0"
        android:textColorHint="@color/white"
        android:textSize="55dp"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:orientation="vertical">

    <!-- Nội dung của LinearLayout con 2 -->

    <Spinner
        android:id="@+id/spin_income_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/tv_income_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/xamden"
        android:layout_margin="20dp"
        android:hint="Despcription"
        android:textColorHint="@color/xamden"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/btn_income_submit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="50dp"
        android:text="Save"
        android:textSize="30dp"/>

</LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
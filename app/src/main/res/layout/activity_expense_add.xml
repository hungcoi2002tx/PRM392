<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expense_Add"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#D64545"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_expense_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:scaleType="centerInside">
                ></ImageView>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Expense"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:gravity="center"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside">
                ></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="How much?"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="left"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/tv_expense_money"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:hint="$0"
            android:textColorHint="@color/white"
            android:textSize="55dp"
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <!-- Nội dung của LinearLayout con 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Spinner
                android:id="@+id/spin_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="5dp"/>
            <ImageView
                android:id="@+id/img_expense_add_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/baseline_add_24"
                android:scaleType="centerInside">
            </ImageView>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_expense_nocategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="center">

        </TextView>
        <EditText
            android:id="@+id/tv_expense_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:hint="Despcription"
            android:textColorHint="@color/xamden"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/tv_addexpense_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"></TextView>
        <Button
            android:id="@+id/btn_expense_submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="50dp"
            android:text="Save"
            android:textSize="30dp"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>